{
  "compilerOptions": {
    "jsx": "react-jsx",         // Usa "react-jsx" si estás usando React 17+ con la nueva transformación JSX
    "module": "esnext",
    "lib": ["DOM", "ES2016"],
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}